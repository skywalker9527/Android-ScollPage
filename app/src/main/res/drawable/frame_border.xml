<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFFFFF" /> <!-- 相框的背景颜色 -->
    <stroke
        android:width="4dp"
        android:color="#C0C0C0" /> <!-- 相框的边框颜色和宽度 -->
    <corners android:radius="8dp" /> <!-- 相框的圆角半径 -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" /> <!-- 相框的内边距 -->
    <item android:drawable="@drawable/shadow_top" /> <!-- 上侧阴影 -->
    <item android:drawable="@drawable/shadow_left" /> <!-- 左侧阴影 -->
    <item android:drawable="@drawable/shadow_right" /> <!-- 右侧阴影 -->
    <item android:drawable="@drawable/shadow_bottom" /> <!-- 底部阴影 -->
</shape>
